<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Glass/Metallic Theme -->
    <Style x:Key="CalculatorButtonStyle" TargetType="Button">
        <Setter Property="Foreground" Value="#2C3E50"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Margin" Value="3"/>
        <Setter Property="BorderBrush" Value="#95A5A6"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="outerBorder" 
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#E8F4F8" Offset="0"/>
                                <GradientStop Color="#B8D4E0" Offset="0.5"/>
                                <GradientStop Color="#A0C0D0" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="5" ShadowDepth="2" Color="#999999" Opacity="0.5"/>
                        </Border.Effect>
                        <Border x:Name="innerBorder"
                                CornerRadius="8"
                                Padding="5">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#FFFFFF" Offset="0"/>
                                    <GradientStop Color="#E0E0E0" Offset="0.3"/>
                                    <GradientStop Color="Transparent" Offset="0.3"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="outerBorder" Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#F0F8FF" Offset="0"/>
                                        <GradientStop Color="#C8E0F0" Offset="0.5"/>
                                        <GradientStop Color="#B0D0E0" Offset="1"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="outerBorder" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Color="#999999" Opacity="0.5"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="outerBorder" Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#A0C0D0" Offset="0"/>
                                        <GradientStop Color="#B8D4E0" Offset="0.5"/>
                                        <GradientStop Color="#D8E8F0" Offset="1"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="outerBorder" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect BlurRadius="2" ShadowDepth="1" Color="#999999" Opacity="0.5"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="outerBorder" Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Display Style for Glass Theme -->
    <Style x:Key="DisplayBorderStyle" TargetType="Border">
        <Setter Property="BorderThickness" Value="3"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Margin" Value="0,0,5,0"/>
        <Setter Property="BorderBrush">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#4A90E2" Offset="0"/>
                    <GradientStop Color="#67B26F" Offset="0.5"/>
                    <GradientStop Color="#4A90E2" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="10" ShadowDepth="3" Color="#000000" Opacity="0.3"/>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="DisplayInnerBorderStyle" TargetType="Border">
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#1A1A2E" Offset="0"/>
                    <GradientStop Color="#16213E" Offset="0.5"/>
                    <GradientStop Color="#0F3460" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="DisplayTextBoxStyle" TargetType="TextBox">
        <Setter Property="FontSize" Value="32"/>
        <Setter Property="IsReadOnly" Value="True"/>
        <Setter Property="TextAlignment" Value="Right"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Padding" Value="15"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Foreground" Value="#00D9FF"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontFamily" Value="Consolas"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="8" ShadowDepth="0" Color="#00D9FF" Opacity="0.5"/>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>
