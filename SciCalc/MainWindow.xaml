<Window x:Class="SciCalc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SciCalc"
        mc:Ignorable="d"
        Title="科学计算器" Height="600" Width="500"
        ResizeMode="CanMinimize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Theme Selector -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
            <TextBlock Text="Theme:" VerticalAlignment="Center" Margin="0,0,10,0" FontSize="14"/>
            <ComboBox x:Name="ThemeComboBox" Width="150" SelectionChanged="ThemeComboBox_SelectionChanged">
                <ComboBoxItem Content="Light (Rounded Flat)" Tag="Light"/>
                <ComboBoxItem Content="Dark (Glowing)" Tag="Dark"/>
                <ComboBoxItem Content="High Contrast" Tag="HighContrast"/>
                <ComboBoxItem Content="Glass (Metallic)" Tag="Glass" IsSelected="True"/>
            </ComboBox>
        </StackPanel>
        
        <!-- Display -->
        <TextBox x:Name="DisplayTextBox" 
                 Grid.Row="1" 
                 FontSize="28" 
                 IsReadOnly="True" 
                 TextAlignment="Right" 
                 VerticalContentAlignment="Center"
                 Padding="10"
                 Background="#F5F5F5"
                 BorderBrush="#CCCCCC"
                 BorderThickness="2"
                 Text="0"/>
        
        <!-- Calculator Buttons -->
        <Grid Grid.Row="2" Margin="0,10,0,0">
            <UniformGrid Columns="6" Rows="8">
                <!-- Row 1: Functions -->
                <Button Content="sin" Click="FunctionButton_Click" Tag="sin" Style="{DynamicResource CalculatorButtonStyle}"/>
                <Button Content="cos" Click="FunctionButton_Click" Tag="cos" Style="{DynamicResource CalculatorButtonStyle}"/>
                <Button Content="tan" Click="FunctionButton_Click" Tag="tan" Style="{DynamicResource CalculatorButtonStyle}"/>
                <Button Content="ln" Click="FunctionButton_Click" Tag="ln" Style="{DynamicResource CalculatorButtonStyle}"/>
                <Button Content="log" Click="FunctionButton_Click" Tag="log10" Style="{DynamicResource CalculatorButtonStyle}"/>
                <Button Content="exp" Click="FunctionButton_Click" Tag="exp" Style="{DynamicResource CalculatorButtonStyle}"/>
                
                <!-- Row 2: More functions -->
                <Button Content="√" Click="FunctionButton_Click" Tag="sqrt" Style="{DynamicResource CalculatorButtonStyle}"/>
                <Button Content="x²" Click="FunctionButton_Click" Tag="square" Style="{DynamicResource CalculatorButtonStyle}"/>
                <Button Content="^" Click="OperatorButton_Click" Tag="^" Style="{DynamicResource CalculatorButtonStyle}"/>
                <Button Content="!" Click="FactorialButton_Click" Style="{DynamicResource CalculatorButtonStyle}"/>
                <Button Content="π" Click="ConstantButton_Click" Tag="pi" Style="{DynamicResource CalculatorButtonStyle}"/>
                <Button Content="e" Click="ConstantButton_Click" Tag="e" Style="{DynamicResource CalculatorButtonStyle}"/>
                
                <!-- Row 3: Memory and special -->
                <Button Content="(" Click="OperatorButton_Click" Tag="(" Style="{DynamicResource CalculatorButtonStyle}"/>
                <Button Content=")" Click="OperatorButton_Click" Tag=")" Style="{DynamicResource CalculatorButtonStyle}"/>
                <Button Content="%" Click="PercentButton_Click" Style="{DynamicResource CalculatorButtonStyle}"/>
                <Button Content="±" Click="SignToggleButton_Click" Style="{DynamicResource CalculatorButtonStyle}"/>
                <Button Content="Ans" Click="AnsButton_Click" Style="{DynamicResource CalculatorButtonStyle}"/>
                <Button Content="⌫" Click="BackspaceButton_Click" FontSize="20" Style="{DynamicResource CalculatorButtonStyle}"/>
                
                <!-- Row 4: Clear and number row -->
                <Button Content="C" Click="ClearButton_Click" FontWeight="Bold" Style="{DynamicResource CalculatorButtonStyle}"/>
                <Button Content="7" Click="NumberButton_Click" Tag="7" Style="{DynamicResource CalculatorButtonStyle}"/>
                <Button Content="8" Click="NumberButton_Click" Tag="8" Style="{DynamicResource CalculatorButtonStyle}"/>
                <Button Content="9" Click="NumberButton_Click" Tag="9" Style="{DynamicResource CalculatorButtonStyle}"/>
                <Button Content="÷" Click="OperatorButton_Click" Tag="÷" Style="{DynamicResource CalculatorButtonStyle}"/>
                <Button Content="×" Click="OperatorButton_Click" Tag="×" Style="{DynamicResource CalculatorButtonStyle}"/>
                
                <!-- Row 5 -->
                <Button Content="" IsEnabled="False" Opacity="0"/>
                <Button Content="4" Click="NumberButton_Click" Tag="4" Style="{DynamicResource CalculatorButtonStyle}"/>
                <Button Content="5" Click="NumberButton_Click" Tag="5" Style="{DynamicResource CalculatorButtonStyle}"/>
                <Button Content="6" Click="NumberButton_Click" Tag="6" Style="{DynamicResource CalculatorButtonStyle}"/>
                <Button Content="-" Click="OperatorButton_Click" Tag="-" Style="{DynamicResource CalculatorButtonStyle}"/>
                <Button Content="+" Click="OperatorButton_Click" Tag="+" Style="{DynamicResource CalculatorButtonStyle}"/>
                
                <!-- Row 6 -->
                <Button Content="" IsEnabled="False" Opacity="0"/>
                <Button Content="1" Click="NumberButton_Click" Tag="1" Style="{DynamicResource CalculatorButtonStyle}"/>
                <Button Content="2" Click="NumberButton_Click" Tag="2" Style="{DynamicResource CalculatorButtonStyle}"/>
                <Button Content="3" Click="NumberButton_Click" Tag="3" Style="{DynamicResource CalculatorButtonStyle}"/>
                <Button Content="" IsEnabled="False" Opacity="0"/>
                <Button Content="" IsEnabled="False" Opacity="0"/>
                
                <!-- Row 7 -->
                <Button Content="" IsEnabled="False" Opacity="0"/>
                <Button Content="0" Click="NumberButton_Click" Tag="0" Style="{DynamicResource CalculatorButtonStyle}"/>
                <Button Content="." Click="DecimalButton_Click" Style="{DynamicResource CalculatorButtonStyle}"/>
                <Button Content="" IsEnabled="False" Opacity="0"/>
                <Button Content="" IsEnabled="False" Opacity="0"/>
                <Button Content="" IsEnabled="False" Opacity="0"/>
                
                <!-- Row 8: Equals button spanning columns -->
                <Button Content="" IsEnabled="False" Opacity="0"/>
                <Button Content="" IsEnabled="False" Opacity="0"/>
                <Button Content="" IsEnabled="False" Opacity="0"/>
                <Button Content="" IsEnabled="False" Opacity="0"/>
                <Button Content="=" Click="EqualsButton_Click" FontWeight="Bold" Grid.ColumnSpan="2" Style="{DynamicResource CalculatorButtonStyle}"/>
            </UniformGrid>
        </Grid>
    </Grid>
</Window>
